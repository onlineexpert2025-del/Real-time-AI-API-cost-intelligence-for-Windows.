<Window x:Class="CostPulse.Views.AddEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Usage Entry" Height="400" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#222">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add Usage" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Quick Paste -->
        <TextBlock Grid.Row="1" Text="Quick Paste JSON (Optional):" Foreground="#AAA" Margin="0,0,0,2"/>
        <TextBox x:Name="TxtJson" Grid.Row="2" Height="60" AcceptsReturn="True" Background="#333" Foreground="White" BorderBrush="#555" Margin="0,0,0,10"
                 TextChanged="TxtJson_TextChanged"/>

        <!-- Manual Fields -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="Provider:" Foreground="#AAA"/>
            <ComboBox x:Name="CmbProvider" Margin="0,2,0,5" IsEditable="True">
                <ComboBoxItem Content="OpenAI"/>
                <ComboBoxItem Content="Anthropic"/>
                <ComboBoxItem Content="Google"/>
            </ComboBox>

            <TextBlock Text="Model:" Foreground="#AAA"/>
            <ComboBox x:Name="CmbModel" Margin="0,2,0,5" IsEditable="True"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Input Tokens:" Foreground="#AAA"/>
                    <TextBox x:Name="TxtInput" Margin="0,2,0,5" Background="#333" Foreground="White" BorderBrush="#555"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Output Tokens:" Foreground="#AAA"/>
                    <TextBox x:Name="TxtOutput" Margin="0,2,0,5" Background="#333" Foreground="White" BorderBrush="#555"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Label (Optional):" Foreground="#AAA"/>
            <TextBox x:Name="TxtLabel" Margin="0,2,0,5" Background="#333" Foreground="White" BorderBrush="#555"/>
        </StackPanel>

        <TextBlock x:Name="TxtError" Grid.Row="5" Foreground="Red" TextWrapping="Wrap" Margin="0,5,0,0"/>

        <Button x:Name="BtnSave" Grid.Row="7" Content="Save Entry" Height="30" Click="BtnSave_Click" Background="#007ACC" Foreground="White" BorderThickness="0"/>
    </Grid>
</Window>
